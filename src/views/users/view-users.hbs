{{#if admin}}
  <div class="text-center w-min m-auto mt-5">
    <a
      href="/api/users/add-user"
      class="p-2 w-36 h-11 bg-indigo-500 text-white font-semibold hover:bg-indigo-700 flex mt-5"
    >
      <svg
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        class="h-6 text-slate-100"
      >
        <path
          d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"
        ></path>
      </svg>
      Add new user
    </a>
  </div>

  <div class="m-auto flex-row flex flex-wrap mt-8 mb-5">

    {{#each users}}
      {{! grid md: lg:grid-cols-3  }}
      <div
        class="w-36 md:w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow mb-5 m-auto pb-4"
      >
        <div class="relative flex justify-center items-center">
          <svg
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
            class="rounded-t-lg float h-40 md:h-80"
          >
            <path
              clip-rule="evenodd"
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-5.5-2.5a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0zM10 12a5.99 5.99 0 00-4.793 2.39A6.483 6.483 0 0010 16.5a6.483 6.483 0 004.793-2.11A5.99 5.99 0 0010 12z"
            ></path>
          </svg>

          <a
            href="/api/users/edit/{{_id}}
            "
          >
            <svg
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
              class="h-6 absolute top-2 left-2 text-gray-400 hover:text-green-500"
            >
              <path
                d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z"
              ></path>
              <path
                d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z"
              ></path>
            </svg>
          </a>

          <form action="/api/users/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit">
              <svg
                aria-hidden="true"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 absolute top-2 right-2 text-gray-400 hover:text-red-600"
              ><path
                  fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                ></path></svg>
            </button>
          </form>

        </div>
        <div class="text-center">

          <p
            class="text-xs md:text-xl font-semibold tracking-tight text-gray-900 break-words"
          >{{username}}</p>

          <p
            class="text-[11px] md:text-xl font-semibold tracking-tight text-gray-900 w-full"
          >{{email}}</p>

        </div>
      </div>

    {{/each}}
  </div>
{{/if}}